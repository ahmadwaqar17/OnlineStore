@{
    ViewData["Title"] = "Role Selection";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #1a1a1a;
            color: #f1f1f1;
        }
    </style>
</head>
<body class="bg-gray-900 text-gray-100">
    <div class="flex items-center justify-center min-h-screen">
        <div class="w-full max-w-sm">
            <div class="bg-gray-800 shadow-lg rounded-lg">
                <div class="p-6 text-center">
                    <h5 class="text-2xl font-bold mb-4">Choose Your Role</h5>
                    <form asp-action="SelectRole" method="post">
                        <button type="submit" name="role" value="Customer" class="w-full bg-blue-500 text-white py-2 px-4 rounded mb-4 hover:bg-blue-600">
                            <i class="fas fa-user"></i> Customer
                        </button>
                        <button type="submit" name="role" value="Admin" class="w-full bg-gray-600 text-white py-2 px-4 rounded hover:bg-gray-700">
                            <i class="fas fa-user-shield"></i> Admin
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.js"></script>
</body>
</html>
