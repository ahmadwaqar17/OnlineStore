<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensure footer is pushed to the bottom */
        }

        .navbar {
            background-color: #1e1e1e;
            border-bottom: 1px solid #333;
        }

        .navbar-brand, .nav-link {
            color: #e0e0e0;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #007bff;
            }

        .footer {
            background-color: #1e1e1e;
            color: #e0e0e0;
            padding: 10px 0; /* Reduced height */
            text-align: center;
            margin-top: auto; /* Push footer to bottom */
        }

            .footer .icon {
                font-size: 1.2rem;
                margin: 0 10px;
                color: #007bff;
            }

            .footer a {
                color: #e0e0e0;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #007bff;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OnlineStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="LandingPage" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li>
                            <a class="btn btn-primary" href="@Url.Action("ShowCart", "Cart")">Show Cart</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <br />
            <br />
            <br />

        </main>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
  
    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 OnlineStore</p>
            <p>
                <a href="mailto:ahmedwaqar2002@gmail.com">
                    <i class="fas fa-envelope icon"></i> ahmedwaqar2002@gmail.com
                </a>
                <a href="https://wa.me/923048519152" target="_blank">
                    <i class="fab fa-whatsapp icon"></i> Chat with us on WhatsApp
                </a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
