@model IEnumerable<OnlineStore.Models.Product>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table thead th {
            color: white; /* Set table header text color to white */
        }

        .table tbody td {
            color: white; /* Set table body text color to white */
        }

        .table {
            width: 100%; /* Ensure table takes full width of container */
        }

        .fullfillment-container {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            color: white; /* Set text color to white */
            background-color: #343a40; /* Dark background for better contrast */
        }

        .table img {
            max-width: 150px; /* Adjust image width as needed */
            height: auto;
        }

        .table td, .table th {
            vertical-align: middle; /* Center align content vertically */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="fullfillment-container">
            <h2>Product List</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Image</th> 
                            <th>Category</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Description</td>
                                <td>
                                    <img src="@Url.Content(product.ImagePath)" alt="@product.Name" class="img-fluid" />
                                </td>
                                <td>@product.Category</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Admin", new { id = product.Pid })" class="btn btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary mt-3">Back to Dashboard</a>
    </div>
</body>
</html>
