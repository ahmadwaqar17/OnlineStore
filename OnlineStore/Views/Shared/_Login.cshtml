<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Application</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.2.4/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-900 text-white">
    <header class="bg-gray-800 text-gray-100 p-4">
        <div class="container mx-auto">
            <h1 class="text-2xl font-semibold">My Application</h1>
        </div>
    </header>

    <main class="container mx-auto p-4">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 text-gray-100 p-4 mt-8">
        <div class="container mx-auto text-center text-sm">
            <p>&copy; @DateTime.Now.Year My Application. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
