@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Fulfillment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4 text-white bg-dark">
    <h2 class="text-2xl font-bold mb-4">Fulfillment</h2>
    <div class="table-container">
        <table class="table table-striped table-bordered table-dark">
            <thead class="bg-gray-700">
                <tr>
                    <th class="py-2 px-4 text-left border-b border-gray-600">Email</th>
                    <th class="py-2 px-4 text-left border-b border-gray-600">Phone</th>
                    <th class="py-2 px-4 text-left border-b border-gray-600">City</th>
                    <th class="py-2 px-4 text-left border-b border-gray-600">Street</th>
                    <th class="py-2 px-4 text-left border-b border-gray-600">Area</th>
                    <th class="py-2 px-4 text-left border-b border-gray-600">Products</th>
                    <th class="py-2 px-4 text-left border-b border-gray-600">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-2 px-4 border-b border-gray-600">@item.Email</td>
                        <td class="py-2 px-4 border-b border-gray-600">@item.Phone</td>
                        <td class="py-2 px-4 border-b border-gray-600">@item.City</td>
                        <td class="py-2 px-4 border-b border-gray-600">@item.Street</td>
                        <td class="py-2 px-4 border-b border-gray-600">@item.Area</td>
                        <td class="py-2 px-4 border-b border-gray-600">
                            <ul class="list-disc pl-5">
                                @foreach (var product in item.Products)
                                {
                                    <li>@product.Name - @product.Price.ToString("C")</li>
                                }
                            </ul>
                        </td>
                        <td class="py-2 px-4 border-b border-gray-600">
                            <a href="@Url.Action("PrintInvoice", new { email = item.Email })" class="btn btn-primary btn-sm">
                                <i class="fas fa-print"></i> Print Invoice
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary btn-sm mt-3">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>