@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <style>
        /* BASIC */
        html {
            background-color: #000000; /* Dark black background */
        }

        body {
            font-family: "Poppins", sans-serif;
            height: 100vh;
            color: #ffffff; /* White text color for the entire page */
        }

        a {
            color: #ffffff; /* White text color for links */
            display: inline-block;
            text-decoration: none;
            font-weight: 400;
        }

        h2 {
            text-align: center;
            font-size: 16px;
            font-weight: 600;
            text-transform: uppercase;
            display: inline-block;
            margin: 40px 8px 10px 8px;
            color: #ffffff; /* White text color for headers */
        }
        /* STRUCTURE */
        .wrapper {
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            width: 100%;
            min-height: 100%;
            padding: 20px;
        }

        #formContent {
            border-radius: 10px;
            background: #333333; /* Dark grey background for form */
            padding: 30px;
            width: 90%;
            max-width: 450px;
            position: relative;
            box-shadow: 0 30px 60px rgba(0,0,0,0.3);
            text-align: center;
        }

        #formFooter {
            background-color: #444444; /* Slightly lighter background for footer */
            border-top: 1px solid #555555;
            padding: 25px;
            text-align: center;
            border-radius: 0 0 10px 10px;
        }
        /* FORM TYPOGRAPHY */
        input[type=submit] {
            background-color: #56baed;
            border: none;
            color: white;
            padding: 15px 80px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            text-transform: uppercase;
            font-size: 13px;
            box-shadow: 0 10px 30px rgba(95,186,233,0.4);
            border-radius: 5px;
            margin: 5px 20px 40px 20px;
            transition: all 0.3s ease-in-out;
        }

            input[type=submit]:hover {
                background-color: #39ace7;
            }

        input[type=email] {
            background-color: #444444; /* Darker grey for input fields */
            border: none;
            color: #ffffff;
            padding: 15px 32px;
            text-align: center;
            font-size: 16px;
            margin: 5px;
            width: 85%;
            border: 2px solid #444444;
            transition: all 0.5s ease-in-out;
            border-radius: 5px;
        }

            input[type=email]:focus {
                background-color: #333333;
                border-bottom: 2px solid #5fbae9;
            }

        .alert {
            margin-top: 20px;
        }
        /* ICON */
        #icon {
            width: 60px;
            height: 60px;
        }
    </style>
</head>
<body class="bg-dark d-flex align-items-center justify-content-center min-vh-100">
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="https://cdn-icons-png.flaticon.com/128/3135/3135715.png" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form -->
            <form method="post" action="/Login/Index">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" name="email" id="email" class="fadeIn second" placeholder="Enter your email" required />
                </div>
                <input type="submit" class="fadeIn fourth" value="Log In">
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.Error
                </div>
            }
        </div>
    </div>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
